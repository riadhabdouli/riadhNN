<form method="post" action="{{ path('statut_delete', {'idStatut': statut.idStatut}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ statut.idStatut) }}">
    <button class="btn">Delete</button>
</form>
