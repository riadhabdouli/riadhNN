<form method="post" action="{{ path('region_delete', {'idRegion': region.idRegion}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ region.idRegion) }}">
    <button class="btn">Delete</button>
</form>
