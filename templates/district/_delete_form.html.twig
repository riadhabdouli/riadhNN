<form method="post" action="{{ path('district_delete', {'idDistrict': district.idDistrict}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ district.idDistrict) }}">
    <button class="btn">Delete</button>
</form>
