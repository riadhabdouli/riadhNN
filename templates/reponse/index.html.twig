{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Reponseid</th>
                <th>Libelle</th>
                <th>Userid</th>
                <th>Questionid</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.reponseid }}</td>
                <td>{{ reponse.libelle }}</td>
                <td>{{ reponse.userid }}</td>
                <td>{{ reponse.questionid }}</td>
                <td>
                    <a href="{{ path('reponse_show', {'reponseid': reponse.reponseid}) }}">show</a>
                    <a href="{{ path('reponse_edit', {'reponseid': reponse.reponseid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reponse_new') }}">Create new</a>
{% endblock %}
